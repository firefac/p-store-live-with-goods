/**app.wxss**/

.container {
  box-sizing: border-box;
  background-color: #F5F5F5;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

view, image, text, navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view, text {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 29rpx;
}


.share-btn{
  height: 100%;
  display: inline-block;
  padding: 0rpx;
  margin: 0rpx;
  line-height: 0px;
  overflow: auto;
}

.share-btn::after{
  border: 0px solid black;
}

.works-card{
  padding: 0rpx 0rpx 50rpx 0rpx;
}

.works-card .content {
  width: 750rpx;
  padding-bottom: 20rpx;
}

.works-card  .tags{ 
  margin: 10rpx 30rpx 10rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.works-card  .tags .tag{
  margin: 0 20rpx 10rpx 0;
}

.works-card .operation {
  padding: 20rpx 30rpx 10rpx 30rpx;
  display:flex;
}
.works-card .operation .likes {
  width: 75%;
  display: flex;
}

.works-card .operation .likes .avatar {
  height: 50rpx;
  width: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
}

.works-card .operation .likes .avatar:nth-of-type(n+2) {
  margin-left: -15rpx;
}

.works-card .operation .likes .txt {
  font-size: 26rpx;
  color: #fff;
  line-height: 60rpx;
  margin: 0rpx 10rpx;
}

.works-card .operation .btn {
  display:flex;
  text-align: center;
  width: 25%;
}

.works-card .operation .share-btn {
  margin-left: 30rpx;
  background-color:transparent;
}

.works-card .content .cover {
  width: 750rpx;
  height: 100%;
}

.works-card .content .title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 5rpx 30rpx 5rpx 30rpx;
  display: block;
  color: #ffffff;
}

.works-card .content .desc {
  font-size: 26rpx;
  color:#ccc;
  padding: 0rpx 30rpx;
  display: block;
}
